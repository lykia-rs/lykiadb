#[name=resolving_write_0, run=interpreter]>

var $a = "global";
{
    function $show_a() {
        testutil::print($a);
    };

    var $a = "block";
    
    function $show_b() {
        testutil::print($a);
    };

    
    $show_a();
    $show_b();
    
    $a = "test";
    
    $show_a();
    $show_b();
}

---

global
block
global
test


#[name=resolving_write_1, run=interpreter]>

